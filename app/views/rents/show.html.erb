<h1>Rents#show</h1>
<p>Find me in app/views/rents/show.html.erb</p>

<div class='container'>
Price: <%= @rent.price %><br>
Status: <%= @rent.status %><br>
Rent Date: <%= @rent.rent_date %><br>
devolution_Date: <%= @rent.devolution_date %><br>


<% if current_admin%>
<h1>Create#claim</h1>
<%=form_for @claim do |f| %>
  <div class="form-group">
  Description:    <%=f.text_field :description%>
    </div>
  <div class="form-group">
  Status:    <%=f.text_field :status%>
  </div>
  <div class="form-group">
  Type:    <%=f.text_field :type_of_claim%>
  </div>
  <div class="form-group">
  Price:    <%=f.number_field :price%>
  </div>
  <div class="form-group">
  <%= hidden_field_tag "rent_id", @rent.id %>
</div>
<%=f.submit %>
<% end %>
<%end%>
</end>
