
<div class='container'>
  <h1>Property information</h1>

<%= form_for @property, html: {multipart: true} do |f| %>
  <div class="form-group">
  Title:    <%=f.text_field :title%>
    </div>
  <div class="form-group">
  Property type:    <%=f.text_field :kind%>
  </div>
  <div class="form-group">
  Availability:    <%=f.text_field :availability%>
  </div>
  <div class="form-group">
  Price:    <%=f.number_field :price%>
  </div>
  <div class="form-group">
  Lat:    <%=f.number_field :lat%>
  </div>
  <div class="form-group">
  Lng:    <%=f.number_field :lng%>
  </div>

  <div class="form-group">
  Description:    <%=f.text_area :description%>
  </div>
  <div class="form-group">
  Street:    <%=f.text_field :street%>
  </div>
  <div class="form-group">
  Apt #:    <%=f.text_field :apt%>
  </div>
  <div class="form-group">
  City:    <%=f.text_field :city%>
  </div>
  <div class="form-group">
  State:    <%=f.text_field :state%>
  </div>
  <div>
    <h3>Image of property</h3>
    <%= f.file_field 'images[]', type: :file, multiple: true %>

  </div>
<%=f.submit %>
<% end %>







