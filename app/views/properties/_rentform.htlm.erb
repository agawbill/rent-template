<h2>Rent this property</h2>

<%= bootstrap_form_for :rent, url:{action: 'assign', controller: 'rents'} do |f| %>
 <%=f.text_field :price%><br>
   <%=f.date_field :rent_date, :value => Time.now.strftime('%Y-%m-%d')%><br>

 <%=f.date_field :devolution_date, :value => Time.now %><br>
<%=f.submit "Rent Property?"%><br>
<%= hidden_field_tag "property_id", @property.id %><br>
<%end%>
